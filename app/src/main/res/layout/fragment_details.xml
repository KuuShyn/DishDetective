<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/foodValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:textAppearance="?attr/textAppearanceBody1"
            tools:text="ShynFood" />

        <TextView
            android:id="@+id/caloriesPerServing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calories_per_serving"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_below="@+id/foodValue" />

        <TextView
            android:id="@+id/caloriesValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            tools:text="96mg"
            android:layout_below="@+id/caloriesPerServing" />

        <TextView
            android:id="@+id/caloriesReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            tools:text="Too high in calories!"
            android:layout_below="@+id/caloriesValue" />

        <TextView
            android:id="@+id/ironIntakePerServing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iron_intake_per_serving"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_below="@+id/caloriesReason" />

        <TextView
            android:id="@+id/ironValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            tools:text="69mg"
            android:layout_below="@+id/ironIntakePerServing" />

        <TextView
            android:id="@+id/ironReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            tools:text="Too low in iron!"
            android:layout_below="@+id/ironValue" />

        <TextView
            android:id="@+id/allergenInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:text="@string/allergen_information"
            android:layout_below="@+id/ironReason" />

        <TextView
            android:id="@+id/allergenValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            tools:text="NONE"
            android:layout_below="@+id/allergenInformation" />

        <TextView
            android:id="@+id/allergenReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            tools:text="this dish does not contain any allergens"
            android:layout_below="@+id/allergenValue" />


    </RelativeLayout>

</ScrollView>