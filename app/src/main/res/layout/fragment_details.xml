<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/foodLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/food_label"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <TextView
            android:id="@+id/foodValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/food"
            android:textAppearance="?attr/textAppearanceBody1" />

        <TextView
            android:id="@+id/reasonsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reasons_label"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <TextView
            android:id="@+id/reasonsValue"
            tools:text="is delicious of course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            />

        <TextView
            android:id="@+id/isDiabeticLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/is_diabetic_label"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <TextView
            android:id="@+id/isDiabeticValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="No"
            android:textAppearance="?attr/textAppearanceBody1" />

    </LinearLayout>

</ScrollView>