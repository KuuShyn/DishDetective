<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Icon for Dish -->
        <ImageView
            android:id="@+id/dishIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_background"
        android:layout_marginBottom="16dp" />

        <!-- Dish Name -->
        <TextView
            android:id="@+id/editDishNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="DISH NAME"
            android:layout_marginBottom="8dp" />

        <!-- com.thesis.dishdetective_xml.ui.recipe_analyzer.Recipe Name -->
        <TextView
            android:id="@+id/recipeNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="My Recipe"
            android:layout_marginBottom="16dp" />

        <!-- Calorie Badge -->
        <TextView
            android:id="@+id/caloriesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="638 cal"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

        <!-- Nutritional Breakdown -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/proteinsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Proteins: 47 g"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/fatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Fat: 10 g"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/satFatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Saturated Fatty Acids: 1.9 g"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/monoFatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Monounsaturated Fatty Acids: 2.7 g"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/carbsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Carbs: 44 g"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/fibersTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Fibers: 2 g"
                android:layout_marginBottom="4dp" />
        </LinearLayout>

        <!-- Ingredient List -->
        <TextView
            android:id="@+id/ingredientsHeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Ingredients"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/IngredientContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
        </LinearLayout>

        <!-- Edit com.thesis.dishdetective_xml.ui.recipe_analyzer.Recipe Button -->
        <Button
            android:id="@+id/editRecipeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Recipe"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/saveRecipeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Recipe"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
