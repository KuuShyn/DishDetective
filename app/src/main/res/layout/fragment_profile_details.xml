<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/ageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/ageValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody1" />

    <TextView
        android:id="@+id/weightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight (kg):"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/weightValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody1" />

    <TextView
        android:id="@+id/heightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height (feet, in):"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/heightValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody1" />

    <TextView
        android:id="@+id/genderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender:"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/genderValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody1" />

    <TextView
        android:id="@+id/weightGoalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight Goal:"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/weightGoalValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody1" />

    <TextView
        android:id="@+id/weightChangePerWeekTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight Change Per Week (lb):"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/weightChangePerWeekValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody1" />
</LinearLayout>