<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="#FFFFFF">

    <!-- Profile Header -->
    <TextView
        android:id="@+id/profileHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#00b389"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"/>

    <!-- User Name -->
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alex Johnson"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1E1E1E"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"/>

    <!-- Calories Per Day Box -->
    <TextView
        android:id="@+id/caloriesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALORIES PER DAY"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#B0B0B0"
        android:gravity="center"
        android:layout_marginTop="28dp" />

    <TextView
        android:id="@+id/caloriesValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1700"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#00b389"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/gray_box"
        android:padding="20dp" />

    <!-- Goal Title -->
    <TextView
        android:id="@+id/goalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOAL"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#B0B0B0"
        android:layout_marginTop="28dp" />

    <!-- Goal Value -->
    <TextView
        android:id="@+id/goalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lose 1lb per week"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1E1E1E"
        android:layout_marginTop="12dp" />

    <!-- Iron Intake Title -->
    <TextView
        android:id="@+id/ironIntakeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IRON INTAKE PER DAY"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#B0B0B0"
        android:layout_marginTop="28dp" />

    <!-- Iron Intake Value -->
    <TextView
        android:id="@+id/ironIntakeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18 mg"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#00b389"
        android:layout_marginTop="12dp" />

    <!-- User Summary -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gray_box"
        android:padding="20dp"
        android:layout_marginTop="28dp">

        <TextView
            android:id="@+id/userSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Summary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1E1E1E"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/summaryDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: Alex Johnson\nAge: 29\nGender: Male\nHeight: 175 cm\nWeight: 70 kg"
            android:textSize="18sp"
            android:textColor="#555555" />
    </LinearLayout>

    <!-- Add a spacer to push the button to the bottom -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Edit Profile Button -->
    <Button
        android:id="@+id/editProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:backgroundTint="#2a2a72"
        android:textColor="#FFFFFF"
        android:padding="20dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

</LinearLayout>