<!-- res/layout/fragment_profile.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/ageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/ageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody1" />

    <TextView
        android:id="@+id/weightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight (kg):"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody1" />

    <TextView
        android:id="@+id/heightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height (feet, in):"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/heightFeetInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:hint="Feet"
            android:textAppearance="?attr/textAppearanceBody1" />

        <EditText
            android:id="@+id/heightInchesInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:hint="Inches"
            android:textAppearance="?attr/textAppearanceBody1" />
    </LinearLayout>

    <TextView
        android:id="@+id/genderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender:"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/genderInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody1" />

    <TextView
        android:id="@+id/weightGoalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight Goal:"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/weightGoalInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody1" />

    <TextView
        android:id="@+id/weightChangePerWeekTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight Change Per Week (lb):"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/weightChangePerWeekInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody1" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="16dp" />

</LinearLayout>